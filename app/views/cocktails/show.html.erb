<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Home", root_path %><br><br>

      <%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
      <%= link_to 'Delete', @cocktail, method: :delete %> |

      <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %>

    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 text-center">
      <%= cl_image_tag(@cocktail.photo, width: 300, crop: :fill, crop: :fit) %>
      <% @cocktail.doses.each do |dose| %>

        <h4><%= dose.description %> <%= dose.ingredient.name %></h4>

      <% end %>
    </div>
  </div>
</div>



